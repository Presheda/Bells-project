<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:weightSum="10"
    tools:context="com.example.precious.practicalproject.college">

    <RelativeLayout

        android:layout_weight="1.5"
        android:layout_width="match_parent"
        android:layout_height="0dp">



        <TextView
            android:id="@+id/textGrid"
            android:textColor="@android:color/white"
            android:layout_centerInParent="true"
            android:textSize="34sp"
            android:text="GRID LAYOUT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>


    <android.support.v7.widget.GridLayout
        android:id="@+id/mainGrid"
        card_view:rowOrderPreserved="false"
        card_view:alignmentMode="alignMargins"
        card_view:columnCount="2"
        card_view:rowCount="2"
        android:layout_weight="8"
        android:layout_width="match_parent"
        android:layout_height="0dp">




        <!-- Row 1  -->
        <!-- Column 1  -->
        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            card_view:cardUseCompatPadding="true"
            android:layout_width="0dp"
            android:layout_height="0dp"
            card_view:layout_columnWeight="1"
            card_view:layout_rowWeight="1"

         >



        </android.support.v7.widget.CardView>


        <!-- Row 2  -->
        <!-- Column 2  -->
        <android.support.v7.widget.CardView
            card_view:cardUseCompatPadding="true"
            android:layout_width="0dp"
            android:layout_height="0dp"
            card_view:layout_columnWeight="1"
            card_view:layout_rowWeight="1"


            >





        </android.support.v7.widget.CardView>

        <!-- Row 2  -->
        <!-- Column 1  -->
        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            card_view:cardUseCompatPadding="true"
            android:layout_width="0dp"
            android:layout_height="0dp"
            card_view:layout_columnWeight="1"
            card_view:layout_rowWeight="1"

            >




        </android.support.v7.widget.CardView>


        <!-- Row 2  -->
        <!-- Column 2  -->
        <android.support.v7.widget.CardView
            card_view:cardUseCompatPadding="true"
            android:layout_width="0dp"
            android:layout_height="0dp"
            card_view:layout_columnWeight="1"
            card_view:layout_rowWeight="1"

           >



        </android.support.v7.widget.CardView>



    </android.support.v7.widget.GridLayout>


    <LinearLayout
        android:background="@color/colorPrimaryDark"
        android:layout_weight="0.5"
        android:layout_width="match_parent"
        android:layout_height="0dp">


    </LinearLayout>



</LinearLayout>

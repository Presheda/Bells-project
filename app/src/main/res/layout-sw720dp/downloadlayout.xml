<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/darkenedimageone"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">


        <ViewFlipper
            android:layout_marginBottom="10dp"
            android:id="@+id/e_library_linearlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >




            <LinearLayout
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <TextView
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:fontFamily="sans-serif-condensed"
                    android:text="Get your course material for offline view"
                    android:textColor="@android:color/white"
                    android:textSize="25sp"
                    android:textStyle="normal" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <TextView
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Fast Easy and reliable... "
                    android:textColor="@android:color/white"
                    android:textSize="25sp" />



            </LinearLayout>


        </ViewFlipper>


        <EditText

            android:textSize="20sp"
            android:id="@+id/InputMatric"
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:background="@drawable/biglayoutedittextstyle"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            />

        <Button
            android:text="20sp"
            android:id="@+id/clickButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:background="@drawable/biglayoutbuttonstyle"
            android:textColor="@android:color/white"

            />

    </LinearLayout>




    <LinearLayout
        android:background="@drawable/biglayoutbuttonstyle"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:textStyle="bold"
            android:textSize="22sp"
            android:textAllCaps="true"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:id="@+id/student_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <TextView
            android:textStyle="bold"
            android:textSize="22sp"
            android:textAllCaps="true"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:id="@+id/student_matric"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:textStyle="bold"
            android:textSize="22sp"
            android:textAllCaps="true"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:id="@+id/student_program"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:textStyle="bold"
            android:textSize="22sp"
            android:textAllCaps="true"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:id="@+id/student_college"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:textStyle="bold"
            android:textSize="22sp"
            android:textAllCaps="true"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:id="@+id/student_Level"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />



    </LinearLayout>



    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:padding="24dp"
            android:divider="@android:color/white"
            android:dividerHeight="1.5dp"
            android:id="@+id/list_check"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>


        <include layout="@layout/floating_a_button"/>


    </FrameLayout>



</LinearLayout>

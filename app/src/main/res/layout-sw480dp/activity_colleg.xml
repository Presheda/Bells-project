<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:weightSum="10"
    android:id="@+id/college_activity"
    tools:context="com.example.precious.practicalproject.college">

    <RelativeLayout

        android:layout_weight="1.5"
        android:layout_width="match_parent"
        android:layout_height="0dp">



        <TextView
            android:textStyle="bold"
            android:textAllCaps="true"
            android:id="@+id/textGrid"
            android:text="BUT college"
            android:textColor="@android:color/white"
            android:layout_centerInParent="true"
            android:textSize="50sp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>


    <LinearLayout
        android:weightSum="10"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8">


        <LinearLayout
            android:weightSum="10"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5">

            <LinearLayout
                android:gravity="bottom"
                android:orientation="vertical"
                android:id="@+id/colnas"
                android:background="@drawable/darkenedimageone"
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="match_parent">

                <TextView
                   android:textSize="16sp"
                    android:gravity="bottom"
                    android:text="College of Natural and Applied Science "
                    android:textStyle="bold"
                    android:layout_margin="5dp"
                    android:textColor="@android:color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:gravity="bottom"
                android:orientation="vertical"
                android:id="@+id/colmans"
                android:background="@drawable/darkenedimagetwo"
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="match_parent">


                <TextView

                    android:textSize="16sp"

                    android:gravity="bottom"
                    android:text="College of Management Science "
                    android:textStyle="bold"
                    android:layout_margin="5dp"
                    android:textColor="@android:color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:weightSum="10"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5">


            <LinearLayout
                android:gravity="bottom"
                android:orientation="vertical"
                android:id="@+id/coleng"
                android:background="@drawable/darkenedimagethree"
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="match_parent">


                <TextView

                    android:textSize="16sp"
                    android:gravity="bottom"
                    android:text="College of Engineering  "
                    android:textStyle="bold"
                    android:layout_margin="5dp"
                    android:textColor="@android:color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:gravity="bottom"
                android:orientation="vertical"
                android:id="@+id/colenvs"
                android:background="@drawable/darkenedimageone"
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="match_parent">



                <TextView
                    android:textSize="16sp"
                    android:gravity="bottom"
                    android:text="College of Environmental Science "
                    android:textStyle="bold"
                    android:layout_margin="5dp"
                    android:textColor="@android:color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>




        </LinearLayout>





    </LinearLayout>






    <LinearLayout
        android:gravity="center"
        android:background="@color/colorPrimaryDark"
        android:layout_weight="0.5"
        android:layout_width="match_parent"
        android:layout_height="0dp">


        <TextView

            android:textColor="@android:color/white"
            android:text="bellsuniversity.com@Nacoss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>



</LinearLayout>

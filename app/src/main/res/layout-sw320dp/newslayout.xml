<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/darkenedimagethree"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/newsEmptyView"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">





        <TextView
            android:layout_marginBottom="10dp"
            android:textSize="15sp"
            android:textColor="@android:color/white"
            android:text="Get to know what's happeneing in Bells"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:text="Load"
            android:textColor="@android:color/white"
            android:background="@drawable/linearlayoutstyle"
            android:id="@+id/new_fetch_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />



    </LinearLayout>


    <ListView

        android:dividerHeight="1dp"
        android:divider="@android:color/white"
        android:padding="10dp"
        android:paddingLeft="6dp"
        android:id="@+id/news_listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    </ListView>

</LinearLayout>